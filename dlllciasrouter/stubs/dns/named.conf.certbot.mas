<%args>
    $domainName
</%args>
<%init>
use File::Slurp;
my $key = read_file('/etc/bind/Kcertbot.key');
</%init>
key "certbot." {
        algorithm hmac-sha512;
        secret "<% $key %>";
};

% if ( $domainName ne "" ) {
zone "_acme-challenge.<% $domainName %>" {
        type master;
        file "/var/lib/bind/db._acme-challenge.<% $domainName %>";
        check-names warn;
        update-policy {
                grant certbot. name _acme-challenge.<% $domainName %>. txt;
        };
};
% }