use warnings;
use strict;

use EBox;
use EBox::Config::Redis;
use EBox::Sudo;
use TryCatch::Lite;
use JSON::XS;

my ($pattern, $dir) = @ARGV;

unless ($pattern) {
    print STDERR "Usage: $0 pattern [path]\n";
    exit 1;
}

EBox::init();

my $redis = EBox::Config::Redis->instance();

my @keys = $redis->_keys($dir ? "$dir/*" : '*');

foreach my $key (@keys) {
    my $value = $redis->get($key);
    if (ref $value) {
        $value = encode_json($value);
    }
    if (($key =~ /$pattern/) or ($value =~ /$pattern/)) {
        print "$key: $value\n";
    }
}
