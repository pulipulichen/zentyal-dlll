<%doc>
  The template to set the source list for QA updates
</%doc>
<%args>
  $repositoryHostname
  $archive => 'zentyal-qa'
  $user
  $pass
  $ssl => 1
  $port => 443
</%args>
<%init>
  my $proto = 'http';
  $proto .= 's' if ($ssl);
  $repositoryHostname .= ":$port" if ($port != 80 and $port != 443);
</%init>
deb <% $proto %>://<% $user %>:<% $pass %>@<% $repositoryHostname %>/ <% $archive %> main universe multiverse extra
